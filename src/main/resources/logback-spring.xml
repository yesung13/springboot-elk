<!--        <destination>127.0.0.1:4560</destination>-->
<!--        <encoder class="net.logstash.logback.encoder.LogstashEncoder"></encoder>-->
<!--    </appender>-->


    <root level="INFO">
        <appender-ref ref="console"/>
        <appender-ref ref="STASH" />
<!--        <appender-ref ref="LOGSTASH"/>-->
    </root>

</configuration>